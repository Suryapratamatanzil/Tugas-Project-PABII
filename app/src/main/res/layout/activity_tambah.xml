<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/bgandroid4"
    tools:context=".Activity.TambahActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TableRow>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="X"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:id="@+id/btn_kembali"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Kampus"
                android:layout_marginLeft="15dp"
                android:textSize="38sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:id="@+id/et_nama"
        android:drawableLeft="@drawable/baseline_school"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="masukkan nama kampus"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_akreditasi"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:drawableStart="@drawable/baseline_format_quote"
        android:padding="10dp"
        android:hint="masukkan akreditasi kampus"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_motto"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:drawableLeft="@drawable/baseline_format_quote"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:hint="masukkan motto kampus"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_alamat"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:drawableStart="@drawable/baseline_add_location_alt"
        android:padding="10dp"
        android:hint="masukkan lokasi kampus"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_deskripsi_kampus"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:drawableStart="@drawable/baseline_description"
        android:padding="10dp"
        android:hint="masukkan deskripsi kampus"
        android:textSize="24sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_tambah"
        android:text="Tambah"
        android:backgroundTint="@color/black"/>
    </LinearLayout>



</ScrollView>