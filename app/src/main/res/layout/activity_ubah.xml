<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/bgandroid3"
    tools:context=".Activity.UbahActivity">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
                <TableRow>
                        <Button
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:text="X"
                            android:textSize="24dp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/black"
                            android:id="@+id/btn_kembali" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ubah Kampus"
                            android:background="@color/white"
                            android:textSize="38sp"
                            android:layout_marginLeft="25dp"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                </TableRow>
        </TableLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_corner"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/et_nama"
            android:drawableLeft="@drawable/baseline_school"
            android:drawablePadding="5dp"
            android:hint="masukkan nama kampus"
            android:textSize="24sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_corner"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/et_akreditasi"
            android:drawableStart="@drawable/baseline_format_quote"
            android:hint="masukkan akreditasi kampus"
            android:textSize="24sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/et_motto"
            android:background="@drawable/bg_corner"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/baseline_format_quote"
            android:drawablePadding="5dp"
            android:hint="masukkan motto kampus"
            android:textSize="24sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_corner"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/et_alamat"
            android:drawableStart="@drawable/baseline_add_location_alt"
            android:hint="masukkan lokasi kampus"
            android:textSize="24sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/et_deskripsi_kampus"
            android:background="@drawable/bg_corner"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:drawableStart="@drawable/baseline_description"
            android:hint="masukkan deskripsi kampus"
            android:textSize="24sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_ubah"
            android:text="Ubah"
            android:backgroundTint="@color/black"/>
    </LinearLayout>